<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Window">
    </Style>
    <Style TargetType="DataGridCell" x:Key="PartsCell">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
    <Style TargetType="DataGridRow" x:Key="PartsRow">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="BinEditBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ValueDisplayBlock">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Padding" Value="2,0"/>
        <Setter Property="Margin" Value="0,2"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="AliceBlue"/>
    </Style>

    <Style TargetType="TextBox" x:Key="BinEditBox">
        <Setter Property="MinWidth" Value="15"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>